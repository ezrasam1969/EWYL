import React from 'react'
import Sports from './Sports'
import { ChakraProvider } from '@chakra-ui/react';

const App = () => {
  return (
    <div className='Forms'>
      <ChakraProvider>
      <Sports/>
      </ChakraProvider>
    </div>
  )
}

export default App;


<<index.js>>

